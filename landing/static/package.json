{
  "name": "covid-styles",
  "version": "3.0.0",
  "private": true,
  "homepage": "https://coronavirus.data.gov.uk/",
  "rootDir": ".",
  "dependencies": {},
  "scripts": {
    "watch": "sass --watch ./css/index.scss:./css/application.css",
    "build": "set AUTOPREFIXER_GRID=autoplace && sass ./css/index.scss:./css/application.css",
    "postbuild": "npx postcss ./css/application.css --use autoprefixer -d ./css && uglifycss ./css/application.css --output ./css/application.css"
  },
  "eslintConfig": {},
  "devDependencies": {
    "govuk-frontend": "3.8.1",
    "node-sass": "^4.13.1",
    "postcss": "^8.1.2",
    "postcss-cli": "^8.1.0",
    "autoprefixer": "^10.0.1",
    "uglifycss": "^0.0.29"
  }
}
